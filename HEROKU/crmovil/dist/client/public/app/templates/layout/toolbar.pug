md-toolbar(layout="row", ng-show="::mainController.isReady", ng-cloak="")
  .md-toolbar-tools
    md-button.md-icon-button(ng-click="mainController.toggleSidenav('left')", hide-gt-sm="")
      md-icon.primary-icon(aria-label="Menu", md-svg-icon="navigation:ic_menu_24px")
    h1.md-title {{::mainController.title}}
    div(layout="row", flex ="", layout-align="end center")
      md-menu(layout="row", flex ="", layout-align="end center", md-position-mode="target-right target", hide-gt-sm="")
        md-button.md-icon-button.top-button(aria-label="Open settings menu", ng-click="$mdOpenMenu()")
          md-icon(md-menu-origin = "", md-svg-icon="navigation:ic_more_vert_24px")
        md-menu-content(width="3", ng-click="")
          if isLoggedIn
            md-menu-item()
              md-button.md-primary(ng-click="", ui-sref="profile")
                div(layout="row")
                  p(flex="") Perifl&#160;
                  md-icon(md-menu-origin = "", md-svg-icon="action:ic_account_circle_24px")
          else
            md-menu-item()
              md-button.md-primary(ng-click="mainController.showLoginForm($event)")
                div(layout="row")
                  p(flex="") Ingresar&#160;
                  md-icon(md-menu-origin = "", md-svg-icon="editor:ic_insert_emoticon_24px")

    div(layout="row", layout-sm="column", flex ="", layout-align="end center", hide-xs = "", hide-sm = "")
      if isLoggedIn
        md-button.md-primary.md-raised.md-hue-3(ui-sref="profile")
          | Perfil
      else
        md-button.md-primary.md-raised.md-hue-2(ng-click="mainController.showLoginForm($event)")
          | Ingresar
